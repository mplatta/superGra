<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="SuperGra.MainWindow"
        xmlns:local="clr-namespace:SuperGra.Helpers"
        Title="SuperGra" Height="600" Width="1024" WindowState="Maximized">
    <Window.Resources>
        <DataTemplate x:Key="Widget">
            <Grid Background="LightGray" local:Attached.CanDrag="True" Tag="{Binding RelativeSource={RelativeSource AncestorType=Canvas}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.676*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image Source="{Binding TheImage}" HorizontalAlignment="Center" Width="75" Height="75" />
                <TextBlock HorizontalAlignment="Center" Grid.Row="1" Text="{Binding Description}"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#FF3580BF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <ListBox x:Name="mylist" ItemsSource="{Binding AllItems}" ItemsPanel="{DynamicResource ItemsPanelTable}"
                     ItemContainerStyle="{DynamicResource ListBoxItemStyle1}" ItemTemplate="{DynamicResource Widget}"
                     Grid.Column="0">
                <ListBox.Resources>
                    <ItemsPanelTemplate x:Key="ItemsPanelTable">
                        <Canvas x:Name="myCanvas" IsItemsHost="True">
                            <Canvas.Background>
                                <ImageBrush Stretch="Fill"/>
                            </Canvas.Background>
                        </Canvas>
                    </ItemsPanelTemplate>
                    <Style x:Key="ListBoxItemStyle1" TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type Canvas}}}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Resources>
            </ListBox>
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel VerticalAlignment="Top" Margin="0 10">
                <Button x:Name="bAdd" Content="Add" Width="100" Click="bAdd_Click" Margin="5 0" />
                <Button x:Name="bSave" Content="Save" Width="100" Click="bSave_Click" Margin="5 0" />
                <Button x:Name="bLoad" Content="Load" Width="100" Click="bLoad_Click" Margin="5 0" />
                <Button x:Name="bLoadMap" Content="Load Map" Width="100" Click="bLoadMap_Click" Margin="5 0" />
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom" Margin="10 40">
                <TextBlock Text="IP: 255.255.255.255" Foreground="White" FontSize= "15"/>
                <Image x:Name="QrCodeImage" Width="150" Height="150"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
